<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-jms="http://www.springframework.org/schema/integration/jms"
	xmlns:amq="http://activemq.apache.org/schema/core"
	xmlns:jms="http://www.springframework.org/schema/jms"	
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/jms 
		http://www.springframework.org/schema/jms/spring-jms-4.3.xsd
		http://www.springframework.org/schema/integration/jms 
		http://www.springframework.org/schema/integration/jms/spring-integration-jms-4.3.xsd
		http://activemq.apache.org/schema/core 
		http://activemq.apache.org/schema/core/activemq-core-5.9.1.xsd
		http://www.springframework.org/schema/integration 
		http://www.springframework.org/schema/integration/spring-integration-4.3.xsd">
				
	<import resource="integration-common-settings.xml"/>	
	
    <bean id="connectionFactory" class="org.apache.activemq.spring.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
    </bean>                                  
	           
   
    <int:channel id="srvHealthTopicChannel" />
    <int:channel id="srvPerfomTopicChannel" />	  
                        
    <int-jms:message-driven-channel-adapter id="messageDrivenAdapter"
    	channel="srvHealthTopicChannel" destination-name="amq.health.topic"
    	pub-sub-domain="true" receive-timeout="1" />

    <int-jms:message-driven-channel-adapter id="messageDrivenAdapter"
    	channel="srvPerfomTopicChannel" destination-name="amq.perfomance.topic" 
    	pub-sub-domain="true" receive-timeout="1" auto-startup="true" />

	<int:service-activator input-channel="jsonChannel"
    	ref="srvMsgHandler" method="handleSrvJsonMsg" send-timeout="1"
    	requires-reply="false" />

	<int:service-activator input-channel="xmlChannel"
    	ref="srvMsgHandler" method="handleSrvXmlMsg" send-timeout="1"
    	requires-reply="false" />
    	
    <int:service-activator input-channel="srvPerfomTopicChannel"
    	ref="srvMsgHandler" method="handleSrvJsonMsg" send-timeout="1"
    	requires-reply="false" />
</beans>			